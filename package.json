{
  "name": "nanocode",
  "version": "0.1.0",
  "description": "Open-source, local-first AI coding agent framework",
  "type": "module",
  "bin": {
    "minicode": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "coding",
    "agent",
    "cli",
    "typescript"
  ],
  "author": "Nano Code Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "@langchain/anthropic": "^1.3.17",
    "@langchain/core": "^1.1.22",
    "@langchain/ollama": "^1.2.2",
    "@langchain/openai": "^1.2.7",
    "@types/diff": "^7.0.2",
    "@types/marked-terminal": "^6.1.1",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^13.1.0",
    "consola": "^3.4.0",
    "deepagents": "^1.7.5",
    "diff": "^8.0.3",
    "dotenv": "^16.4.7",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.2",
    "gray-matter": "^4.0.3",
    "inquirer": "^12.4.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "ora": "^8.2.0",
    "uuid": "^11.0.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
