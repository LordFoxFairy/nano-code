{
  "name": "nano-code",
  "version": "0.1.0",
  "description": "Open-source, local-first AI coding agent framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:phase1": "vitest run tests/phase1",
    "test:phase2": "vitest run tests/phase2",
    "test:phase3": "vitest run tests/phase3",
    "test:phase4": "vitest run tests/phase4",
    "test:phase5": "vitest run tests/phase5",
    "test:phase6": "vitest run tests/phase6",
    "test:all": "vitest run",
    "lint": "eslint src tests",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "coding",
    "agent",
    "cli",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "tsx": "^4.6.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
